<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Trainticketapp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/primary_dark</item>
    </style>

        <!-- Chế độ tối -->


    <style name="Theme.Trainticketapp" parent="Base.Theme.Trainticketapp" />

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@android:color/black</item>
        <item name="boxStrokeWidth">2dp</item>
<!--        trang thai khi focus -->
        <item name="android:theme">@style/FocusedTextInputLayoutTheme</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
    </style>

    <style name="FocusedTextInputLayoutTheme">
        <item name="colorPrimary">@color/green</item>
    </style>
</resources>