<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context=".fragment.HomeFragment">

    <!-- TODO: Update blank fragment layout -->


    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="250dp"

        android:background="@drawable/corner_border_round"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </View>

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo_ve_tau_re"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="93dp"
        android:backgroundTint="@color/white"
        android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
        android:text="Hi Nhan"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="617dp"
        android:text="The fast way to booking a ticket for your trip"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/ivLogo"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="90dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="281dp"
        android:background="@drawable/rectange_round"
        android:elevation="8dp"
        android:layout_marginTop="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <ImageView
            android:id="@+id/ivWhereTo"
            android:layout_width="38dp"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="46dp"
            android:src="@drawable/baseline_location_on_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivStartPoint" />

        <TextView
            android:id="@+id/tvStartPointLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="62dp"
            android:layout_marginTop="52dp"
            android:text="Start point"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvStartPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="62dp"
            android:layout_marginTop="10dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvStartPointLabel" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/white_grey"
            android:layout_marginTop="10dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvStartPoint"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/tvWhereToLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="62dp"
            android:layout_marginTop="25dp"
            android:text="Where to?"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvStartPoint" />


        <TextView
            android:id="@+id/tvWhereTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="62dp"
            android:layout_marginTop="10dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvWhereToLabel" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/white_grey"
            android:layout_marginTop="10dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvWhereTo"
            app:layout_constraintStart_toStartOf="parent"/>
        <ImageView
            android:id="@+id/ivStartPoint"
            android:layout_width="38dp"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="54dp"
            android:src="@drawable/baseline_radio_button_checked_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivDashed"
            android:layout_width="33dp"
            android:layout_height="44dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/dash_line"
            app:layout_constraintBottom_toTopOf="@id/ivWhereTo"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="97dp" />

        <ImageButton
            android:id="@+id/btnReverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/baseline_support_agent_24"
            tools:layout_editor_absoluteX="282dp"
            tools:layout_editor_absoluteY="86dp" />

       </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/rectange_round"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:text="Search" />


</androidx.constraintlayout.widget.ConstraintLayout>